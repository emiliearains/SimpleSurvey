@model IEnumerable<SimpleSurvey.Models.UserSurveyInfo>

@{
    ViewBag.Title = "MyOpenSurveys";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Open Surveys</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SurveyTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurveyDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SurveyTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurveyDescription)
        </td>
        <td>
            @Html.ActionLink("Take Survey", "TakeSurvey", new { userSurveyId = item.UserSurveyId}) 
        </td>
    </tr>
}

</table>
